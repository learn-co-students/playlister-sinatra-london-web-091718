<h1>Edit <%=@song.name%></h1>

<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>Song name: <input type="text" name="Name" id="song_name" value="<%=@song.name%>"></p>
  <p>Artist name: <input type="text" name="Artist Name" id="artist_name" value="<%=@song.artist.name%>"></p>
  <p>Genres:</p>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%=genre.id%>" <%=@song.genres.include?(genre) ? "checked" : "" %> > <%= genre.name %>
  <% end %>
  <br>
  <input type="submit" value="Save">
</form>